          });
          //console.log(filetype)
          $.ajax({
            url: "api/upload_files",
            type: "POST",
            data: new FormData(this),
            headers: {
              userId: getCookie("userId"),
              caseId: caseId,
              incidentId: incidentId,
              filetype: filetype,
            },
            contentType: false,
            cache: false,
            processData: false,
            dataType: "json",
            success: function (data) {

              showInvalidDetailsSuc("Success! File uploaded successfully");
