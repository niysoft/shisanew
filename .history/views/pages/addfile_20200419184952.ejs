              // console.log(data)
              //data = $.parseJSON(data)
              //console.log(data)
              //alert(data.responseJSON.error_string)
              //let error_string = data.responseJSON.error_string
              showInvalidDetailsError("Error! Something went wrong. Please retry your action")
              $.unblockUI();
            }
          });
        }));
