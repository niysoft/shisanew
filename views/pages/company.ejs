                      <div class="form-group bmd-form-group">
                        <label class="bmd-label-floating">LinkedIn</label>
                        <input type="text"  id="companyLinkedIn" name="companyLinkedIn" class="form-control" value="&nbsp;">
                      </div>
                    </div>
                    <div class="col-md-12"><br>
                      <a href=""  class="btn btn-rose" style="float:right;">Update Company</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <% include ../partials/footer.ejs %>
    </div>
  </div>
  <% <!--include ../partials/theme_bar.ejs--> %>
  <% include ../partials/footer_script.ejs %>
  <script>

function loadIncidents() {
      let initial_url = location.href;
      let url = initial_url.split('/');
      let caseId = url[4]
      //console.log(caseId)
      if (typeof caseId !== "undefined" && caseId.length > 0) {
        $.blockUI({
          message: '<div class="lds-hourglass"></div><br>Processing...'
        });
        //return;
        $.ajax({
          crossOrigin: true,
          crossDomain: true,
          method: "POST",
          url: ApiBaseUrl + "load_incidents",
          data: {
            userId: getCookie("userId"),
            accessToken: getCookie("accessToken"),
            caseId: caseId
          },
          beforeSend: function (xhr) {}
        }).done(function (responseText) {
          //console.log(responseText)
          let perpetratorShortName = responseText.case_details.fname.slice(0, 1) + ". "+responseText.case_details.lname.slice(0, 1);
          let companyName = responseText.case_details.companyName.trim() == "" ? "Not Set" : responseText.case_details.companyName;
          let companySize = responseText.case_details.companySize.trim() == "" ? "Not Set" : responseText.case_details.companySize;
          let companyAddress = responseText.case_details.companyAddress.trim() == "" ? "Not Set" : responseText.case_details.companyAddress;
          console.log(companyName)
         // $("#perpetrator_initials").html(perpetratorShortName)//
          $("#companyName").val(companyName)//companySize 5e7615e9d30cbe41588b1bdf
          $("#companySize").val(companySize)// companyAddress
          $("#companyAddress").val(companyAddress)// 
          $("#companyWebpage").val(responseText.case_details.companyWebpage.trim() == "" ? "Not Set" : responseText.case_details.companyWebpage)
          $("#companyFacebook").val(responseText.case_details.companyFacebook.trim() == "" ? "Not Set" : responseText.case_details.companyFacebook)
          $("#companyLinkedIn").val(responseText.case_details.companyLinkedIn.trim() == "" ? "Not Set" : responseText.case_details.companyLinkedIn)
         // $("#new_incident_link").attr("href", "addincindent/"+responseText.case_details._id).show();//perpetrator_link
         
         
        //$("#perpetrator_link").attr("href", "perpetrator/"+responseText.case_details._id).show();//

          $.unblockUI();
        }).fail(function (jqXHR, exception) {
          let error_string = jqXHR.responseJSON.error_string
          $('#perpetrator_list').html(error_string)
          $.unblockUI();
          showInvalidDetailsError(error_string)
        });
      }
    }

    $(document).ready(function () {
      loadIncidents();
    });
  </script>
</body>

</html>