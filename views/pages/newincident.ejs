<!DOCTYPE html>
<html lang="en">
<meta http-equiv="content-type" content="text/html;charset=utf-8" /><!-- /Added by HTTrack -->

<head>
  <% include ../partials/header_.ejs %>
</head>

<body class="">
  <noscript>
    <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6" height="0" width="0"
      style="display:none;visibility:hidden"></iframe>
  </noscript>
  <div class="wrapper ">
    <% include ../partials/sidebar.ejs %>
    <div class="main-panel">
      <% include ../partials/nav.ejs %>
      <div class="content">
        <div class="container-fluid">
          <% include ../partials/stats.ejs %>
          
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-info card-header-text">
                  <div class="card-text">
                    <h4 class="card-title">New Incident</h4>
                  </div>
                </div>
                <div class="card-body">
                  <form>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group bmd-form-group">
                          <label class="bmd-label-floating">Incident Title</label>
                          <input type="text" class="form-control">
                        </div>
                      </div>
                    </div>

                    <div class="row">

                      <div class="col-md-4">
                        <div class="form-group bmd-form-group">
                          <label class="bmd-label-floating">Date/Time</label>
                          <input type="text" class="form-control">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group bmd-form-group">
                          <label class="bmd-label-floating">Company</label>
                          <input type="text" class="form-control">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group bmd-form-group">
                          <label class="bmd-label-floating">Incident Location</label>
                          <input type="email" class="form-control">
                        </div>
                      </div>
                      
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <h6 class="footer-title">Images</h6>
                        <label for="input-file-now">
                          Click to upload images</label>
                        <input type="file" id="input-file-now" class="dropify" data-default-file="" />
                        <hr> <hr>
                      </div>
                      <div class="col-md-12">
                       
                        <h6 class="footer-title">Videos</h6>
                        <label for="input-file-now"> Click to upload vedios</label>
                        <input type="file" id="input-file-now" class="dropify" data-default-file="" />
                      </div>
                      
                    </div><hr> <hr>
                    <center><button type="submit" class="btn btn-rose pull-left">Add Incident</button></center>
                    <div class="clearfix"></div>
                  </form>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <% include ../partials/footer.ejs %>
    </div>
  </div>
  <% <!--include ../partials/theme_bar.ejs--> %>
  <% include ../partials/footer_script.ejs %>
  <script>
    $(document).ready(function () {
      // Basic
      $('.dropify').dropify();
      // Used events
      var drEvent = $('.dropify-event').dropify();
      drEvent.on('dropify.beforeClear', function (event, element) {
        return confirm("Do you really want to delete \"" + element.filename + "\" ?");
      });

      drEvent.on('dropify.afterClear', function (event, element) {
        alert('File deleted');
      });
    });
  </script>
</body>

</html>