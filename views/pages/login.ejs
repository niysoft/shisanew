    <!-- End Navbar  style="background-image: url('assets/img/signup.jpg')" -->
    <div class="wrapper wrapper-full-page">
        <div class="page-header login-page header-filter" filter-color="black"
            style="background-image: url('assets/img/login_.jpg'); background-size: cover; background-position: top center;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
                        <form method="POST" class="generalUpload" action="api/login">
                            <div class="card card-login card-hidden">
                                <div class="card-header card-header-rose text-center">
                                    <h4 class="card-title">Login</h4>
                                    <div class="social-line">
                                    </div>
                                </div>
                                <div class="card-body">
                                    <span class="bmd-form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">email</i>
                                                </span>
                                            </div>
                                            <input type='hidden' name='publisher_id' value='1'>
                                            <input type="text" name="email" class="form-control"
                                                placeholder="Mobile number...234" required>
                                        </div>
                                    </span>
                                    <span class="bmd-form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="material-icons">lock_outline</i>
                                                </span>
                                            </div>
                                            <input type="password" name="password" class="form-control"
                                                placeholder="Password..." required>
                                        </div>
                                    </span>
                                </div>
                                <div class="card-footer justify-content-center">
                                    <button class="btn btn-primary" type="submit">Login!<div class="ripple-container">
                                        </div></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <% include ../partials/footer.ejs %>
        </div>
    </div>
    <% include ../partials/footer_script.ejs %>
    <script>
        $(".generalUpload").attr("action", ApiBaseUrl + "login")
        console.log(baseUrl)
        let formOptions = {
            dataType: 'json',
            // data:$('.generalUpload').serialize(),
            beforeSubmit: function () {
                //return false
                $.blockUI({
                    // message: '<div class="lds-hourglass"></div><br>Processing...' <div class="loading">Loading&#8230;</div>
                    message: '<div class="loading">Loading&#8230;</div>'
                });
            },
            success: function (responseText, statusText, xhr, $form) {
                showInvalidDetailsSuc(responseText.response_string)
                setCookie("userId", responseText.data._id, 24) //accessToken
                setCookie("accessToken", responseText.data.accessToken, 24) //
                setCookie("userData", JSON.stringify(responseText));
                location.href = baseUrl + "dashboard";
                $.unblockUI();
            },
            error: function (responseText, statusText, xhr, $form) {
                let error_string = responseText.responseJSON.error_string
                showInvalidDetailsError(error_string)
                $.unblockUI()
            }
        };
        $('.generalUpload').ajaxForm(formOptions);
    </script>
</body>

